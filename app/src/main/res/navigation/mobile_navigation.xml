<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_headlines">

    <fragment
        android:id="@+id/nav_headlines"
        android:name="com.blogspot.sslaia.gunews.ui.HeadlinesFragment"
        android:label="@string/menu_headlines"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/headlines_to_news_page"
            app:enterAnim="@anim/slide_in_left"
            app:destination="@id/nav_news_page" />
        <action
            android:id="@+id/headlines_to_about"
            app:enterAnim="@anim/slide_in_left"
            app:destination="@id/nav_about" />
        <action
            android:id="@+id/headlines_to_search"
            app:destination="@id/nav_search_results"
            app:enterAnim="@anim/slide_in_left" />
    </fragment>

