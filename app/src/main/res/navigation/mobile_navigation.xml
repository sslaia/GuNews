        tools:layout="@layout/fragment_about"/>

    <fragment
        android:id="@+id/nav_news_page"
        android:name="com.blogspot.sslaia.gunews.ui.NewsPageFragment"
        android:label="fragment_news_page"
        tools:layout="@layout/fragment_news_page">
        <argument
            android:name="pageUrl"
            android:defaultValue="no url"
            app:argType="string" />
        <argument
            android:name="thumbnailUrl"
            android:defaultValue="no url"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_search_results"
        android:name="com.blogspot.sslaia.gunews.ui.SearchResultsFragment"
        android:label="@string/menu_search_results"
        tools:layout="@layout/fragment_news">
        <argument
            android:name="searchQuery"
            android:defaultValue="no query"
            app:argType="string" />
        <action
            android:id="@+id/search_results_to_news_page"
            app:destination="@id/nav_news_page"
            app:enterAnim="@anim/slide_in_left" />
    </fragment>

</navigation>