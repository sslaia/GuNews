<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="16dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/list_news_date"
            android:text="@string/sample_news_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ListDateStyle" />

        <TextView
            android:id="@+id/list_news_section"
            android:text="@string/sample_news_section"
            app:layout_constraintBaseline_toBaselineOf="@+id/list_news_date"
            app:layout_constraintStart_toEndOf="@+id/list_news_date"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ListSectionStyle" />

        <TextView
            android:id="@+id/list_news_title"
            android:text="@string/sample_news_headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_news_date"
            style="@style/ListTitleStyle" />

        <TextView
            android:id="@+id/list_news_body"
            android:text="@string/sample_news_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_news_title"
            style="@style/ListBodyStyle" />

        <ImageView
            android:id="@+id/list_news_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/sample_news_image_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_news_title"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>